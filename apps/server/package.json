		"@better-uptime/shared-types": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "^4.8.2",
		"inngest": "^3.48.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@better-uptime/config": "workspace:*",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"typescript": "^5.8.2"
	}
}
