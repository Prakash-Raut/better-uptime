{
	"name": "writer-service",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"@better-uptime/queues": "workspace:*",
		"@better-uptime/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"@better-uptime/config": "workspace:*"
	}
}
