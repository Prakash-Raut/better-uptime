{
	"name": "better-uptime",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"format": "biome check --write .",
		"prepare": "husky",
		"dev": "pnpm -r dev",
		"build": "pnpm -r build",
		"check-types": "pnpm -r check-types",
		"dev:native": "pnpm --filter native dev",
		"dev:web": "pnpm --filter web dev",
		"dev:server": "pnpm --filter server dev",
		"db:push": "pnpm --filter @better-uptime/db db:push",
		"db:studio": "pnpm --filter @better-uptime/db db:studio",
		"db:generate": "pnpm --filter @better-uptime/db db:generate",
		"db:migrate": "pnpm --filter @better-uptime/db db:migrate"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.3.6",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.24.0"
}
